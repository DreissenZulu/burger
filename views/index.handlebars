<h1>Eat-Da-Burger!</h1>

<h2>Burgers Ready Ta Eat!</h2>

<ul>
    {{#each burger}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
        <button class="eatBtn" id="{{id}}">Devour It!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Gone From Dis World!</h2>

<ul>
    {{#each burger}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add Da Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>